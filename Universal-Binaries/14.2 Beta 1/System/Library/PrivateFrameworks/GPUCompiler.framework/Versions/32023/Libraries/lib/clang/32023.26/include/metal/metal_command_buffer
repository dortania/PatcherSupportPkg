enum class primitive_type
{
  point,
  line,
  line_strip,
  triangle,
  triangle_strip
};

struct render_command : public _command
{
  METAL_FUNC explicit render_command(command_buffer icb, uint icb_index) thread
      : _command(icb, icb_index)
  {
  }

  METAL_FUNC render_command(const thread render_command &) thread = default;

  METAL_FUNC thread render_command &operator=(const thread render_command &) thread = default;

#if defined(__HAVE_RENDER_PIPELINE_STATE__)
  METAL_FUNC void set_render_pipeline_state(render_pipeline_state pipeline_state) thread
  {
    __metal_set_pipeline_state_render_command(icb, icb_index, pipeline_state.t);
  }
#endif


  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_vertex_buffer(device T *buffer, uint index) thread
  {
    __metal_set_vertex_buffer_render_command(icb, icb_index, static_cast<device void *>(const_cast<device remove_const_t<T> *>(buffer)), ~size_t(0), index);
  }
#if defined(__HAVE_RENDER_COMMAND_VERTEX_BUFFER_STRIDE__)

  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_vertex_buffer(device T *buffer, size_t stride, uint index) thread
  {
    __metal_set_vertex_buffer_render_command(icb, icb_index, static_cast<device void *>(const_cast<device remove_const_t<T> *>(buffer)), stride, index);
  }
#endif
  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_vertex_buffer(constant T *buffer, uint index) thread
  {
    __metal_set_vertex_buffer_render_command(icb, icb_index, static_cast<constant void *>(const_cast<constant remove_const_t<T> *>(buffer)), ~size_t(0), index);
  }
#if defined(__HAVE_RENDER_COMMAND_VERTEX_BUFFER_STRIDE__)

  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_vertex_buffer(constant T *buffer, size_t stride, uint index) thread
  {
    __metal_set_vertex_buffer_render_command(icb, icb_index, static_cast<constant void *>(const_cast<constant remove_const_t<T> *>(buffer)), stride, index);
  }
#endif


  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_fragment_buffer(device T *buffer, uint index) thread
  {
    __metal_set_fragment_buffer_render_command(icb, icb_index, static_cast<device void *>(const_cast<device remove_const_t<T> *>(buffer)), index);
  }
  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_fragment_buffer(constant T *buffer, uint index) thread
  {
    __metal_set_fragment_buffer_render_command(icb, icb_index, static_cast<constant void *>(const_cast<constant remove_const_t<T> *>(buffer)), index);
  }

#if defined(__HAVE_RENDER_COMMAND_MESH__)

  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_object_buffer(device T *buffer, uint index) thread
  {
    __metal_set_object_buffer_render_command(icb, icb_index, static_cast<device void *>(const_cast<device remove_const_t<T> *>(buffer)), index);
  }
  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_object_buffer(constant T *buffer, uint index) thread
  {
    __metal_set_object_buffer_render_command(icb, icb_index, static_cast<constant void *>(const_cast<constant remove_const_t<T> *>(buffer)), index);
  }

  METAL_FUNC void set_object_threadgroup_memory_length(uint length, uint idx) thread
  {
    __metal_set_object_threadgroup_memory_length_render_command(icb, icb_index, length, idx);
  }


  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_mesh_buffer(device T *buffer, uint index) thread
  {
    __metal_set_mesh_buffer_render_command(icb, icb_index, static_cast<device void *>(const_cast<device remove_const_t<T> *>(buffer)), index);
  }
  template <typename T, typename _E = typename enable_if<is_metal_buffer_pointee<T>::value>::type>
  METAL_FUNC void set_mesh_buffer(constant T *buffer, uint index) thread
  {
    __metal_set_mesh_buffer_render_command(icb, icb_index, static_cast<constant void *>(const_cast<constant remove_const_t<T> *>(buffer)), index);
  }
