// Metal 1.1 s5.9.1.1: Fragment Functions -- Derivatives.

METAL_FUNC half dfdx(half p)
{
  return __metal_dfdx(p);
}
METAL_FUNC half dfdy(half p)
{
  return __metal_dfdy(p);
}
